{
  "name": "postmodern",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/jest": "^20.0.4",
    "@types/react": "^15.0.35",
    "@types/react-native": "^0.44.17",
    "@types/react-navigation": "^1.0.15",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-node6": "^11.0.0",
    "jest": "~20.0.0",
    "jest-fetch-mock": "^1.2.0",
    "mock-async-storage": "^1.0.3",
    "react-native-debugger-open": "^0.3.11",
    "react-native-typescript-transformer": "^1.1.3",
    "react-test-renderer": "16.0.0-alpha.12",
    "replace": "^0.3.0",
    "ts-jest": "^20.0.7",
    "typescript": "^2.4.1"
  },
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "node node_modules/jest/bin/jest.js --watch",
    "tsc": "tsc",
    "build": "npm run clean && npm run tsc --",
    "clean": "rm -rf build",
    "postinstall": "npm run patch && rndebugger-open",
    "patch": "./node_modules/.bin/replace '.*resizeMode.*' '' node_modules/react-native-elements/src/tile/Tile.js -s"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-navigation)/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/build/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "dependencies": {
    "react": "16.0.0-alpha.12",
    "react-native": "^0.47.1",
    "react-native-easy-grid": "^0.1.13",
    "react-native-easy-markdown": "^1.1.8",
    "react-native-elements": "^0.15.0",
    "react-native-fetch-blob": "^0.10.8",
    "react-native-gravatar": "^1.0.2",
    "react-native-image-picker": "^0.26.3",
    "react-native-qrcode": "^0.2.4",
    "react-native-settings-list": "^1.6.1",
    "react-native-vector-icons": "^4.3.0",
    "react-navigation": "^1.0.0-beta.11",
    "tslib": "^1.7.1"
  }
}
